<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.bloquear.BloqueoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_bloqueo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_13dp"
                android:contentDescription="@string/str_imagen"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo_credinka"
                app:tint="@color/colorWhite0" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="1dp"
            android:gravity="start|center"
            android:text="@string/str_bloqueo_td_debito"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="3dp"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4sp"
            android:text="@string/str_descripcion_bloqueo_td"
            android:textColor="@color/colorGray1"
            android:textSize="@dimen/dimen_15sp"
            tools:targetApi="o" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_a_nivel_nacional"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@id/imb_nacional_1"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/drw_buttom_call"
                android:contentDescription="@string/str_imagen"
                android:scaleType="fitCenter"
                android:maxHeight="@dimen/dimen_48dp"
                android:maxWidth="@dimen/dimen_48dp"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@id/tv_contacto_nacional_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@drawable/drw_background_item"
                android:gravity="center"
                android:textColor="@color/colorGray1"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@id/imb_nacional_2"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/drw_buttom_call"
                android:contentDescription="@string/str_imagen"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@id/tv_contacto_nacional_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@drawable/drw_background_item"
                android:gravity="center"
                android:textColor="@color/colorGray1"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_usa_canada"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@id/imb_usa_canada"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/drw_buttom_call"
                android:contentDescription="@string/str_imagen"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@id/tv_contacto_usa_canada"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@drawable/drw_background_item"
                android:gravity="center"
                android:textColor="@color/colorGray1"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_resto_mundo"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@id/imb_resto_mundo"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/drw_buttom_call"
                android:contentDescription="@string/str_imagen"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@id/tv_contacto_resto_mundo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@drawable/drw_background_item"
                android:gravity="center"
                android:textColor="@color/colorGray1"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>