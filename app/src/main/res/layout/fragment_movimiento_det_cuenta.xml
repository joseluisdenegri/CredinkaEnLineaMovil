<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detalleproducto.cuentas.movimiento.MovimientoDetCuentaFragment">

    <ImageView
        android:id="@+id/header_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_slider_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_list"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drw_background_item"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_saldo_contable" />

                <TextView
                    android:id="@id/tv_saldo_contable"
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/str_saldo_disponible" />

                <TextView
                    android:id="@id/tv_saldo_disponible"
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_movimientos" />

                <TextView
                    android:id="@id/tv_descripcion_movimiento"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:singleLine="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_nro_transaccion" />

                <TextView
                    android:id="@id/tv_nro_transaccion"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_fecha_movimiento" />

                <TextView
                    android:id="@id/tv_fecha_movimiento"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_moneda" />

                <TextView
                    android:id="@id/tv_moneda"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_hora_trx" />

                <TextView
                    android:id="@id/tv_hora_trx"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_importe_movimiento" />

                <TextView
                    android:id="@id/tv_importe_movimiento"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/colorGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="@string/str_importe" />

                <TextView
                    android:id="@id/tv_importe"
                    style="@style/TitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>