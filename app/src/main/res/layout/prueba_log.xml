<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="@dimen/dimen_6dp"
    android:layout_marginBottom="@dimen/dimen_6dp"
    android:background="@drawable/drw_selectable_listview_item"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@id/tv_nombre_periodo"
        style="@style/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:gravity="center"
        android:text="AGOSTO 2021" />

    <TextView
        android:id="@id/tv_fecha_movimiento"
        style="@style/SubTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nombre_periodo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_nombre_periodo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.4"
        android:gravity="right|center_vertical|center_horizontal|center"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_2dp"
            android:contentDescription="@string/str_imagen"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pdf_down" />
    </LinearLayout>

</LinearLayout>