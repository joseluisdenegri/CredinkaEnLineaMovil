<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/ly_detalle_cuentas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:context=".ui.detalleproducto.cuentas.DetalleCuentasFragment">

    <LinearLayout
        android:id="@+id/ly_content_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="11dp"
            android:paddingBottom="11dp">

            <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1.0"
                android:contentDescription="@string/str_imagen"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_alcancia" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_producto"
                        style="@style/TitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:singleLine="false" />

                    <TextView
                        android:id="@id/tv_numero_cuenta"
                        style="@style/TitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@id/imv_options_cta"
                android:layout_width="42dp"
                android:layout_height="@dimen/dimen_38dp"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:contentDescription="@string/str_imagen"
                android:paddingStart="0dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingEnd="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/ic_menu_tc"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_eecc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="start"
                android:text="@string/str_conoce_eecc"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_12sp" />

            <Button
                android:id="@+id/btn_eecc"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_weight="0.5"
                android:background="@drawable/drw_buttom_custom"
                android:text="@string/str_clic_aqui"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite0"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drw_background_item"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_saldo_contable" />

                <TextView
                    android:id="@id/tv_saldo_contable"
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/str_saldo_disponible" />

                <TextView
                    android:id="@id/tv_saldo_disponible"
                    style="@style/TitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/ly_tittle_moviments"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/drw_background_movements"
                android:gravity="start">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.7"
                    android:text="@string/str_mis_movimientos"
                    android:textColor="@color/colorGray1"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="vertical">

            <ListView
                android:id="@id/lv_movimiento_cuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/colorGray8"
                android:dividerHeight="1dp"
                android:scrollbars="none"
                android:visibility="visible" />

            <TextView
                android:id="@id/tv_sin_movimiento"
                style="@style/TitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="center"
                android:singleLine="false"
                android:text="@string/str_sin_movimiento"
                android:textSize="@dimen/dimen_16sp"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_sentiment_dissatisfied" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>