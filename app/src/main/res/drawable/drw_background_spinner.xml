<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />
                    <stroke android:width="1dp" android:color="#e4e5e6" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="2dp" android:left="3dp" android:right="12dp" android:top="1dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center_vertical|center_horizontal|center" android:src="@drawable/ic_spinner" />
            </item>
        </layer-list>
    </item>
</selector>