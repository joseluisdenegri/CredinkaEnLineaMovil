<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <corners android:radius="@dimen/dimen_8dp" />
            <stroke android:width="1dp" android:color="@color/colorGreen1" />
            <solid android:color="@color/colorGreen2" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <corners android:radius="@dimen/dimen_8dp" />
            <stroke android:width="1dp" android:color="@color/colorGreen1" />
            <solid android:color="@color/colorGreen2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <corners android:radius="@dimen/dimen_8dp" />
            <stroke android:width="1dp" android:color="@color/colorGreen0" />
            <solid android:color="@color/colorGreen0" />
        </shape>
    </item>
</selector>